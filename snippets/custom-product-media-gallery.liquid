<div class="media-gallery-wrapper">
  <!-- Left Arrow Button for navigating to the previous slide -->
  <button class="arrow arrow-left" aria-label="Previous Slide">←</button>

  <!-- Existing Product Media Gallery, where the product images are displayed -->
  <div class="grid__item product__media-wrapper">
    {% render 'product-media-gallery', variant_images: variant_images %}
  </div>

  <!-- Right Arrow Button for navigating to the next slide -->
  <button class="arrow arrow-right" aria-label="Next Slide">→</button>
</div>
